<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="android.support.design.widget.bottomSheetBehavior"
    tools:context=".HomeActivity">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        ></FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="620dp"
        android:layout_marginBottom="1dp"
        android:background="#F80375AD"
        app:itemIconTint="#f8f8ff"
        app:itemTextColor="#f8f8ff"
        app:menu="@menu/home_menu" />

    <TextView
        android:id="@+id/homePageTitle"
        android:layout_width="206dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#F3381A1A"
        android:text="Student Wellbeing"
        android:textAlignment="center"
        android:textColor="#063181"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <Button
        android:id="@+id/seekHelp"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#F80375AD"
        android:text="Seek Help"
        android:textColor="#FDFAF7F7"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mySelfcare"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#F80375AD"
        android:text="My Selfcare"
        android:textColor="#FDFAF7F7"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/information"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="#F80375AD"
        android:text="Information"
        android:textColor="#FDFAF7F7"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/infoSeekHelpButton"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#00A23E3E"
        android:tint="#FCEC1F1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/infoMySelfcareButton"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#00A23E3E"
        android:tint="#FCF50B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/infoInformationButton"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="#00A23E3E"
        android:tint="#FCF50B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageView
        android:id="@+id/uniLogo"
        android:layout_width="126dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/unilogo" />

    <ImageView
        android:id="@+id/wellbeingImage"
        android:layout_width="368dp"
        android:layout_height="271dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uniwellbeing" />

</RelativeLayout>