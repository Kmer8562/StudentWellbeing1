<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySelfcare">

    <TextView
        android:id="@+id/selfcareTitle"
        android:layout_width="158dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="128dp"
        android:text="My Selfcare"
        android:textAlignment="center"
        android:textColor="#063181"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="128dp" />

    <Button
        android:id="@+id/nutrition"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="100dp"
        android:background="#F80375AD"
        android:text="Nutrition"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <Button
        android:id="@+id/diary"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="100dp"
        android:background="#F80375AD"
        android:text="My Diary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <Button
        android:id="@+id/goalsAndTasks"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="100dp"
        android:background="#F80375AD"
        android:text="Goals/Tasks"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />

    <Button
        android:id="@+id/exerciseTracker"
        android:layout_width="208dp"
        android:layout_height="64dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="100dp"
        android:background="#F80375AD"
        android:text="Exercise"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="100dp" />



    <ImageView
        android:id="@+id/uniLogo"
        android:layout_width="126dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/unilogo"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/selfcareImage"
        android:layout_width="367dp"
        android:layout_height="256dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uniselfcare1" />

</androidx.constraintlayout.widget.ConstraintLayout>